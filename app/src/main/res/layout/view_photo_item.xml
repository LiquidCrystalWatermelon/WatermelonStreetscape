<?xml version="1.0" encoding="utf-8"?>
<com.kotlinproject.wooooo.watermelonstreetscape.layout.SquareRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_photo_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_photo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#9000"
        android:padding="16dp"
        android:textColor="?android:colorForegroundInverse"/>

    <View
        android:id="@+id/view_unselected_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40FFFFFF"
        android:visibility="gone"
        tools:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_edit_check_box_selected"
            android:layout_width="@dimen/edit_check_box_size"
            android:layout_height="@dimen/edit_check_box_size"
            android:src="@drawable/ic_check_box_black_24dp"
            android:tint="@color/colorAccentDark"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_edit_check_box_unselected"
            android:layout_width="@dimen/edit_check_box_size"
            android:layout_height="@dimen/edit_check_box_size"
            android:src="@drawable/ic_check_box_outline_blank_black_24dp"
            android:tint="?colorBackgroundFloating"
            android:visibility="gone"/>
    </LinearLayout>

</com.kotlinproject.wooooo.watermelonstreetscape.layout.SquareRelativeLayout>